<% if @user.errors.present? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t"shared._error_messages.error"%> <%= pluralize(@user.errors.size, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |errors| %>
        <li><%= errors %></li>
      <% end %>
    </ul>
  </div>
<% end %>
